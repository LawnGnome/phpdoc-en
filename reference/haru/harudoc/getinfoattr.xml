<refentry xml:id="harudoc.getinfoattr" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruDoc::getInfoAttr</refname>
  <refpurpose>Get current value of the specified document attribute</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>HaruDoc::getInfoAttr</methodname>
   <methodparam><type>int</type><parameter>type</parameter></methodparam>
  </methodsynopsis>
  <para>
   Get the current value of the specified document attribute.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>type</parameter></term>
     <listitem>
      <para>
       The type of the attribute. The following values are available:
       <simplelist>
        <member>
         <constant>HaruDoc::INFO_AUTHOR</constant>
        </member>
        <member>
         <constant>HaruDoc::INFO_CREATOR</constant>
        </member>
        <member>
         <constant>HaruDoc::INFO_TITLE</constant>
        </member>
        <member>
         <constant>HaruDoc::INFO_SUBJECT</constant>
        </member>
        <member>
         <constant>HaruDoc::INFO_KEYWORDS</constant>
        </member>
        <member>
         <constant>HaruDoc::INFO_CREATION_DATE</constant>
        </member>
        <member>
         <constant>HaruDoc::INFO_MOD_DATE</constant>
        </member>
       </simplelist>
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the <type>string</type> value of the specified document attribute.
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &haru.error;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><methodname>HaruDoc::setInfoAttr</methodname></member>
    <member><methodname>HaruDoc::setInfoDateAttr</methodname></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

