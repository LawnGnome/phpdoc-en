<refentry xml:id="harupage.getcurrenttextpos" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>HaruPage::getCurrentTextPos</refname>
  <refpurpose>Get the current position for text printing</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>array</type><methodname>HaruPage::getCurrentTextPos</methodname>
   <void/>
  </methodsynopsis>
  <para>
   Get the current position for text printing.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns the current position for text printing as an array with 2 elements
   - "x" and "y".
  </para>
 </refsect1>

 <refsect1 role="errors">
  &reftitle.errors;
  &haru.error;
 </refsect1>

</refentry>

