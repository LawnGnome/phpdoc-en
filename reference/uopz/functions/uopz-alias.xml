<refentry xml:id="function.uopz-alias" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>uopz_alias</refname>
  <refpurpose>Create an alias for function</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>void</type><methodname>uopz_alias</methodname>
   <methodparam><type>string</type><parameter>class</parameter></methodparam>
   <methodparam><type>string</type><parameter>function</parameter></methodparam>
   <methodparam><type>string</type><parameter>alias</parameter></methodparam>
  </methodsynopsis>
  <methodsynopsis>
   <type>void</type><methodname>uopz_alias</methodname>
   <methodparam><type>string</type><parameter>function</parameter></methodparam>
   <methodparam><type>string</type><parameter>alias</parameter></methodparam>
  </methodsynopsis>
  <para>
 Aliases an existing function or method
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>class</parameter></term>
    <listitem>
     <para>
 The class which contains the function
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>function</parameter></term>
    <listitem>
     <para>
 The name of the existing function
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>alias</parameter></term>
    <listitem>
     <para>
 The alias to use
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>uopz_alias</function> example</title>
   <programlisting role="php">
<![CDATA[
<?php

uopz_alias("strlen", "alias");

echo alias("Hello World");
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
11
]]>
   </screen>
  </example>
  
  <example>
   <title><function>uopz_alias</function> class example</title>
   <programlisting role="php">
<![CDATA[
<?php
class My {
    public static function existing($arg) {
        return strlen($arg); 
    }
}

uopz_alias(My::class, "existing", "alias");

echo My::alias("Hello World");
?>
]]>
   </programlisting>
   &example.outputs.similar;
   <screen>
<![CDATA[
11
]]>
   </screen>
  </example>
 </refsect1>


</refentry>

